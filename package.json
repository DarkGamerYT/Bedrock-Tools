{
	"name": "bedrocktools",
	"author": "xKingDark",
	"version": "0.1.0-beta",
	"description": "Bedrock Tools is an app created to help Minecraft: Bedrock Edition players make add-ons.",
	"license": "MIT",
	"scripts": {
		"start": "electron --trace-deprication ./index.js",
		"start-no-gpu": "electron ./index.js --disable-gpu",
		"build": "electron-builder",
		"build_appx": "electron-builder --win appx"
	},
	"dependencies": {
		"@electron/remote": "^2.0.9",
		"@sfirew/mc-motd-parser": "^1.1.0",
		"bytebuffer": "^5.0.1",
		"discord-rpc": "^4.0.1",
		"express": "^4.18.2",
		"prismarine-nbt": "^2.2.1"
	},
	"devDependencies": {
		"electron": "^23.1.3",
		"electron-builder": "^23.6.0"
	},
	"build": {
		"appId": "com.xkingdark.bedrocktools",
		"productName": "Bedrock Tools (Beta)",
		"icon": "build/icon.ico",
		"appx": {
			"displayName": "Bedrock Tools (Beta)",
			"applicationId": "com.xkingdark.bedrocktools",
			"publisherDisplayName": "xKingDark"
		},
		"nsis": {
			"allowToChangeInstallationDirectory": false,
			"oneClick": true,
			"installerIcon": "build/icon.ico",
			"uninstallerIcon": "build/icon.ico",
			"installerHeaderIcon": "build/icon.ico",
			"createDesktopShortcut": true
		}
	}
}
