{
	"name": "bedrocktools",
	"author": "xKingDark",
	"version": "0.1.2-beta",
	"description": "Bedrock Tools is an app created to help Minecraft: Bedrock Edition players make add-ons.",
	"license": "LGPL-3.0-or-later",
	"scripts": {
		"start": "electron .",
		"build": "electron-builder",
		"typecheck": "tsc -w"
	},
	"dependencies": {
		"@electron/remote": "^2.0.9",
		"@sfirew/mc-motd-parser": "^1.1.0",
		"bytebuffer": "^5.0.1",
		"discord-rpc": "^4.0.1",
		"highlight.js": "^11.8.0",
		"jszip": "^3.10.1",
		"prismarine-nbt": "^2.2.1",
		"three": "^0.156.0"
	},
	"devDependencies": {
		"@types/discord-rpc": "^4.0.5",
		"@types/node": "^20.5.8",
		"electron": "^23.1.3",
		"electron-builder": "^24.6.3",
		"typescript": "^5.2.2"
	},
	"build": {
		"appId": "com.xkingdark.bedrocktools",
		"productName": "Bedrock Tools (Beta)",
		"nsis": {
			"allowToChangeInstallationDirectory": false,
			"oneClick": true,
			"installerIcon": "build/icon.ico",
			"uninstallerIcon": "build/icon.ico",
			"installerHeaderIcon": "build/icon.ico",
			"createDesktopShortcut": true
		}
	}
}
